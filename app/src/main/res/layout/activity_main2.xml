<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="czarnecki.michal.androidtimertest.Activities.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stoper"
        android:id="@+id/stoper"
        android:width="250dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licznik"
        android:id="@+id/counter"
        android:width="250dp"
        android:layout_below="@+id/stoper"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odliczanie serwisem"
        android:id="@+id/service"
        android:width="250dp"
        android:layout_below="@+id/counter"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WorkManager Time Management"
        android:id="@+id/textView3"
        android:layout_marginTop="46dp"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="odliczanie broadcastem"
        android:id="@+id/broadcastButton"
        android:layout_below="@+id/service"
        android:layout_centerHorizontal="true"
        android:width="250dp" />
</RelativeLayout>
